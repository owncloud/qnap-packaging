{
  "api_version": "v1",
  "title": "{{OWNCLOUD_NAME}}",
  "wizard": [
    {
      "title": "{{OWNCLOUD_BASE_PAGE}}",
      "schema": {
        "http_port": {
          "title": "internal HTTP port for your ownCloud",
          "type": "integer",
          "description": "{{OWNCLOUD_WEB_HOST_PORT_DESC}}",
          "minimum": 1,
          "maximum": 65535,
          "required": true
        }
      },
      "form": ["http_port"]
    }
  ],
  "binding": {
    "type": "yaml",
    "file": "docker-compose.yml",
    "data": {
      "http_port": "services.owncloud.ports[0]"
    },
    "template": ["*.tpl"]
  }
}
